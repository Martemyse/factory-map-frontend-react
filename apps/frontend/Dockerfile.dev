# Development Dockerfile for frontend
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 8077

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
